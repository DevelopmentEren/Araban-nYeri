@*@model ArabaMarkalari*@
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - OtomobilPazari</title>
	<link rel="icon" href="~/car.png" />
	<link rel="stylesheet" href="https://kit.fontawesome.com/8ca9a64af8.css" crossorigin="anonymous">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand text-center" asp-area="" asp-controller="Home" asp-action="Index"><h3 style="color:red;">OtomobilPazari</h3><h6 style="color:gray;">2. El Otomobil Al&Sat</h6></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
					</ul>

					<div class="nav-item my-2 my-sm-0 mr-sm-2">
						<a class="nav-link text-dark theme" style="cursor:pointer;font-size:26px;"><i class="fa-solid fa-moon"></i></a>
					</div>

					<button class="btn btn-outline-success my-2 my-sm-0 mr-sm-2">Giriş Yap!</button>
				</div>
			</div>
		</nav>
	</header>
	<div class="container-fluid widthd">
		<div class="row d-flex listflex">
			<ul class="h-100 cars col-2 border-right">
				@*@foreach (var item in ArabaMarkalari.markalar)
				{
					<li><span class="yazi" style="cursor:pointer;">@item</span></li>
				}*@
			</ul>
			<main role="main" class="pb-3 col-10 content">
				@RenderBody()
			</main>
		</div>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - OtomobilPazari - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="https://kit.fontawesome.com/8ca9a64af8.js" crossorigin="anonymous"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
